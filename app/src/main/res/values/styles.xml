<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"  parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAppearance">@style/TextAppearanceBlack</item>
        <item name="android:textAppearanceMedium">@style/TextAppearanceBlack</item>
        <item name="android:textAppearanceButton">@style/TextAppearanceBlack</item>
        <item name="android:textAppearanceSmall">@style/TextAppearanceBlack</item>
    </style>

    <style name="TextAppearanceBlack" parent="@android:style/TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="TextAppearanceBlack12" parent="@style/TextAppearanceBlack">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearanceBlack16" parent="@style/TextAppearanceBlack">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceBlack20" parent="@style/TextAppearanceBlack">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearanceBlack32" parent="@style/TextAppearanceBlack">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearanceWhite" parent="@android:style/TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearanceWhite20" parent="@style/TextAppearanceWhite">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearanceWhite32" parent="@style/TextAppearanceWhite">
        <item name="android:textSize">32sp</item>
    </style>


</resources>
